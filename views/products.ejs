<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CDN link for Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <div
      class="row row-cols-2 row-cols-md-3 g-4 h-100"
      style="margin: 0 auto; width: 60%; text-align: center"
    >
      <% products.forEach((product) => { %>
      <div class="col">
        <div class="card text-center h-100" style="width: 18rem">
          <img
            src="/uploads/<%= product.image %>"
            class="card-img-top"
            alt="..."
            style="margin: auto"
          />
          <div class="card-body" style="position: relative">
            <h5 class="card-title"><%= product.name %></h5>
            <a
              href="/addtocart/<%= product.id %>"
              class="btn btn-outline-dark"
              style="position: relative; bottom: 1px; right: 1px; padding: 4px"
              >Add to Cart</a
            >
            <a
              href="/view/<%= product.id %>"
              class="btn btn-outline-dark"
              style="position: relative; bottom: 1px; right: 1px; padding: 4px"
              >View More</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
